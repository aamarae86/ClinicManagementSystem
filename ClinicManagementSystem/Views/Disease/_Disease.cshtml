@model DAL.Disease
@using (Html.BeginForm("CreateDisease", "Disease", FormMethod.Post, new { @id = "frmDisease" }))
{
    @Html.HiddenFor(s => s.Id)
    <div class="form-group">
        <label class="form-label" for="ADFirstName">Disease</label>
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Name, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="form-label">Is Active</label>
        @Html.CheckBoxFor(s => s.IsActive, new { @class = "checkbox" })
    </div>
    <div class="form-group">
        @if (Model.Id > 0)
        {
            <input type="submit" name="name" value="Update" class="btn btn-primary" />
        }
        else
        {
            <input type="submit" name="name" value="Save" class="btn btn-primary" />
        }
        <button data-dismiss="modal" class="btn btn-dark">Cancel</button>
    </div>
}

